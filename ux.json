{
    "scss": {
        "src": ["styles/**/*.scss", "styles/components/**/*.scss"],
        "dest": "styles"
    },
    "js": {
        "src": "scripts/**/*.js",
        "dest": "scripts",
        "main": "scripts/site.js"
    },
    "watch": [
        "index.html",
        "docs/index.html"
    ],
    "server": true,
    "compileJs": true,
    "proxy": false
}